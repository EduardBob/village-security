<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonCommonLeftRoundedLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_common_left_rounded_light</item>
        <item name="android:textColor">@drawable/button_common_dark_text_inverted</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ButtonCommonRightRoundedLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_common_right_rounded_light</item>
        <item name="android:textColor">@drawable/button_common_dark_text_inverted</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="ButtonCommon">
        <item name="android:background">@drawable/button_common</item>
        <item name="android:textSize">@dimen/size_16sp</item>

        <item name="android:textColor">@drawable/button_common_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="background">
        <item name="android:background">@drawable/bg</item>
    </style>

</resources>
